<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/layout_bg11"
    android:orientation="horizontal"
    android:padding="2dp">

    <ImageView
        android:id="@+id/img_hospital"
        android:layout_width="83dp"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhat_medium"
            android:text="Appolomedics Super Speciality Hospital"
            android:textColor="@color/txtcolor2"
            android:textFontWeight="500"
            android:textSize="@dimen/Text_Size_14" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/redhat"
                android:gravity="center_vertical"
                android:text="●"
                android:textColor="@android:color/black"
                android:textFontWeight="400"
                android:textSize="6sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/redhat"
                android:gravity="center_vertical"
                android:text="Multy Spiciality Hospital"
                android:textColor="@android:color/darker_gray"
                android:textFontWeight="400"
                android:textSize="@dimen/Text_Size_14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/redhat"
                android:gravity="center_vertical"
                android:text="●"
                android:textColor="@android:color/black"
                android:textFontWeight="400"
                android:textSize="6sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/redhat"
                android:gravity="center_vertical"
                android:text="13 Doctors"
                android:textColor="@android:color/darker_gray"
                android:textFontWeight="400"
                android:textSize="@dimen/Text_Size_14" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>