<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_filter"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/filter_icon_grey" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/healthrecord_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_add_health_record"
            android:layout_below="@+id/img_filter"
            android:layout_marginTop="10dp">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_add_health_record"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="@font/redhat_medium"
        android:textAlignment="center"
        android:text="\u002b  Add Health Record"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom|center"
        android:textSize="14sp"></com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>


</androidx.coordinatorlayout.widget.CoordinatorLayout>