<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/layout_bg12">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good Health Package Premium"
        android:textColor="@color/dashcolor1"
        android:fontFamily="@font/redhat_medium"
        android:textFontWeight="500"
        android:textSize="@dimen/Text_size_16" />



    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Week package"
        android:textColor="@color/txtcolor1"
        android:fontFamily="@font/redhat"
        android:textFontWeight="400"
        android:textSize="@dimen/Text_Size_14" />

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹757"
                android:textColor="@color/login1"
                android:fontFamily="@font/redhat_medium"
                android:textFontWeight="700"
                android:textSize="@dimen/Text_size_15" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line"
                android:textColor="@color/txtcolor1"
                android:fontFamily="@font/redhat"
                android:textFontWeight="400"
                android:textSize="@dimen/Text_Size_14" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@drawable/layout_green_dash">
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="22% Off"
                    android:textAlignment="center"
                    android:textColor="#00CD00"
                    android:fontFamily="@font/redhat_medium"
                    android:textFontWeight="500"
                    android:textSize="@dimen/Text_Size_13" />
            </LinearLayout>
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_book_now"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:background="@color/itemreportbg"
            android:fontFamily="@font/redhat_medium"
            android:padding="5dp"
            android:textAllCaps="false"
            android:text="Book Now"
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textSize="@dimen/Text_size_15"></androidx.appcompat.widget.AppCompatButton>


    </RelativeLayout>
</LinearLayout>