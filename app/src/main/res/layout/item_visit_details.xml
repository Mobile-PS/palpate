<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_package_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/layout_bg12"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
      android:visibility="gone"
        android:id="@+id/linear_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/redhat_medium"
                    android:text="Visit 1"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/Text_size_15" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/redhat"
                    android:text="16 Aug 2021 , 07:00 AM "
                    android:textColor="@color/login1"
                    android:textFontWeight="400"
                    android:textSize="@dimen/Text_Size_14" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/redhat"
                        android:text="●"
                        android:textColor="@color/greencolor"
                        android:textFontWeight="700"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:text="Completed"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_14" />


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/dot" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_health_sat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_height="40dp"
                android:background="@drawable/button_bg8"
                android:fontFamily="@font/redhat_medium"
                android:text="Health Status"
                android:textAllCaps="false"
                android:textColor="@color/txtcolor3"
                android:textFontWeight="500"
                android:textSize="@dimen/Text_Size_14" />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_docs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/redhat_medium"
                android:text="Uploads"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="@dimen/Text_Size_14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_pacakge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/redhat_medium"
                    android:text="Eye Care"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/Text_size_15" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/redhat"
                    android:text="16 Aug 2021 , 07:00 AM "
                    android:textColor="@color/login1"
                    android:textFontWeight="400"
                    android:textSize="@dimen/Text_Size_14" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/redhat"
                        android:text="●"
                        android:textColor="@color/greencolor"
                        android:textFontWeight="700"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:text="Completed"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_14" />

                </LinearLayout>

                <ImageView
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dot"/>



                <RelativeLayout
                    android:id="@+id/relative_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat_medium"
                        android:text="Doctor Details"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_size_15" />

                    <ImageView
                        android:id="@+id/img_down_arrow"
                        android:layout_centerVertical="true"
                        android:layout_width="15dp"
                        android:layout_height="8dp"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/down_arrow"/>

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/img_up_arrow"
                        android:layout_width="15dp"
                        android:layout_height="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/up_arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/linear_description"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_user"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:padding="8dp"
                        android:src="@drawable/patient_icon2"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toLeftOf="@+id/img_call"
                        android:layout_toRightOf="@+id/img_user"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/redhat_medium"
                            android:text="Meena Kumari"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="@dimen/Text_size_16" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/redhat"
                                android:gravity="center_vertical"
                                android:text="26 Years"
                                android:textColor="@android:color/darker_gray"
                                android:textFontWeight="400"
                                android:textSize="@dimen/Text_Size_14" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:fontFamily="@font/redhat"
                                android:gravity="center_vertical"
                                android:text="●"
                                android:textColor="@android:color/darker_gray"
                                android:textFontWeight="400"
                                android:textSize="6sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/redhat"
                                android:gravity="center_vertical"
                                android:text="Female"
                                android:textColor="@android:color/darker_gray"
                                android:textFontWeight="400"
                                android:textSize="@dimen/Text_Size_14" />
                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/redhat"
                            android:gravity="center_vertical"
                            android:text="Exp (2 years)"
                            android:textColor="@android:color/darker_gray"
                            android:textFontWeight="400"
                            android:textSize="@dimen/Text_Size_14" />


                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_call"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/call_blue_icon"
                        tools:ignore="ContentDescription" />


                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>