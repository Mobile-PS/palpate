<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/redhat_medium"
                    android:text="My Health QR Details"
                    android:textColor="@color/login1"
                    android:textFontWeight="500"
                    android:textSize="@dimen/Header_Text_size" />


            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/redhat"
                    android:textAlignment="textEnd"
                    android:text="Palpate ID #D12345"
                    android:padding="10dp"
                    android:textColor="@color/login1"
                    android:textFontWeight="400"
                    android:textSize="@dimen/Text_Size_13" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/dot" />

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_member"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="5dp"
                        android:src="@drawable/male_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/img_member"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/member_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/redhat_medium"
                            android:text="Raj Kumar"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="@dimen/Text_size_16" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/member_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/redhat"
                                android:gravity="center_vertical"
                                android:text="Male"
                                android:textColor="@android:color/darker_gray"
                                android:textFontWeight="400"
                                android:textSize="@dimen/Text_Size_14" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/redhat"
                                android:gravity="center_vertical"
                                android:text="●"
                                android:textColor="@android:color/darker_gray"
                                android:textFontWeight="400"
                                android:textSize="6sp"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                />
                            <TextView
                                android:id="@+id/member_detailss2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/redhat"
                                android:gravity="center_vertical"
                                android:text="Male"
                                android:textColor="@android:color/darker_gray"
                                android:textFontWeight="400"
                                android:textSize="@dimen/Text_Size_14" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/redhat"
                                android:gravity="center_vertical"
                                android:text="●"
                                android:textColor="@android:color/darker_gray"
                                android:textFontWeight="400"
                                android:textSize="6sp"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                />

                            <TextView
                                android:id="@+id/member_detailss1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/redhat"
                                android:gravity="center_vertical"
                                android:text="Male, 50 years"
                                android:textColor="@android:color/darker_gray"
                                android:textFontWeight="400"
                                android:textSize="@dimen/Text_Size_14" />
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:textAlignment="textStart"
                        android:text="Emergency Contact Number "
                        android:padding="10dp"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_13" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:textAlignment="textEnd"
                        android:text="+91 9876543210"
                        android:padding="10dp"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_13" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:textAlignment="textStart"
                        android:text="Blood Group"
                        android:padding="10dp"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_13" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:textAlignment="textEnd"
                        android:text="B+"
                        android:padding="10dp"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_13" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/dot" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/redhat_medium"
                    android:text="Health Insurance"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/Text_size_15" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:textAlignment="textStart"
                        android:text="Policy No. "
                        android:padding="10dp"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_13" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:textAlignment="textEnd"
                        android:text="#72537521"
                        android:padding="10dp"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_13" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:textAlignment="textStart"
                        android:text="Company Name"
                        android:padding="10dp"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_13" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:textAlignment="textEnd"
                        android:text="HDFC Life"
                        android:padding="10dp"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_13" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/dot" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/redhat_medium"
                    android:text="Term Insurance"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/Text_size_15" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:textAlignment="textStart"
                        android:text="Policy No. "
                        android:padding="10dp"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_13" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:textAlignment="textEnd"
                        android:text="#72537521"
                        android:padding="10dp"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_13" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:textAlignment="textStart"
                        android:text="Company Name"
                        android:padding="10dp"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_13" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:textAlignment="textEnd"
                        android:text="HDFC Life"
                        android:padding="10dp"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_13" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/dot" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/redhat_medium"
                    android:text="Organ Donation "
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/Text_size_15" />

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:gravity="center_vertical"
                        android:text="●"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:gravity="center_vertical"
                        android:text="Corina"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_14" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:gravity="center_vertical"
                        android:text="●"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/redhat"
                        android:gravity="center_vertical"
                        android:text="Liver"
                        android:textColor="@color/login1"
                        android:textFontWeight="400"
                        android:textSize="@dimen/Text_Size_14" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>





    </LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>
