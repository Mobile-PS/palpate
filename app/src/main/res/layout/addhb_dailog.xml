<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/redhat_medium"
        android:text="Add HbA1c"
        android:textColor="@color/login1"
        android:textFontWeight="500"
        android:textSize="@dimen/Text_size_16" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:layerType="software"
        android:src="@drawable/dotted" />

    <EditText
        android:id="@+id/edtxt_hbc"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/editxt_bg"
        android:fontFamily="@font/redhat"
        android:hint="Enter HbA1c"
        android:inputType="number"
        android:maxLength="2"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textFontWeight="400"
        android:textSize="@dimen/Text_Size_14" />

    <com.github.anastr.speedviewlib.SpeedView
        android:visibility="gone"
        android:id="@+id/speedView"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:sv_endDegree="360"
        app:sv_indicator="KiteIndicator"
        app:sv_maxSpeed="14"
        app:sv_minSpeed="4"
        app:sv_withTremble="false"
        app:sv_speedometerWidth="100dp"
        app:sv_startDegree="180"
        app:sv_tickTextFormat="FLOAT"
        app:sv_sectionStyle="BUTT"
        app:sv_unit="%" />

    <com.ekn.gruzer.gaugelibrary.HalfGauge
        android:layout_gravity="center"
        android:id="@+id/halfGauge"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        />

    <TextView
        android:id="@+id/txt_status"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhat"
        android:text="Normal"
        android:textColor="@color/login1"
        android:textFontWeight="500"
        android:textSize="@dimen/Text_size_16" />



    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg3"
            android:fontFamily="@font/redhat_medium"
            android:stateListAnimator="@null"
            android:text="Reset"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="@dimen/Text_size_16" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/redhat_medium"
            android:stateListAnimator="@null"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="@dimen/Text_size_16" />

    </LinearLayout>

</LinearLayout>