<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/redhat_medium"
            android:text="Category Filters"
            android:textColor="@color/login1"
            android:textFontWeight="500"
            android:textSize="@dimen/Header_Text_size" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/close_red" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/dot" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_filtercateg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/dot" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Clear All"
            android:textAllCaps="false"
            android:fontFamily="@font/redhat_medium"
            android:textFontWeight="500"
            android:textSize="@dimen/Text_Size_14"
            android:layout_weight="1"></androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textColor="@color/white"
            android:background="#35CEDE"
            android:textAllCaps="false"
            android:fontFamily="@font/redhat_medium"
            android:textFontWeight="500"
            android:textSize="@dimen/Text_Size_14"
            android:layout_weight="1"></androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>


</LinearLayout>
