<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/redhat_medium"
            android:text="Request for Call Back"
            android:textColor="@color/login1"
            android:textFontWeight="500"
            android:textSize="@dimen/Text_size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/redhat_medium"
            android:text="Patient Name"
            android:textColor="@color/login1"
            android:textFontWeight="500"
            android:textSize="@dimen/Text_Size_14" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editxt_bg"
            android:fontFamily="@font/redhat"
            android:hint="Enter Unpaid Amount"
            android:text="Harikesh Kumar"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:focusable="false"
            android:enabled="false"
            android:textFontWeight="400"
            android:textSize="@dimen/Text_Size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/redhat_medium"
            android:text="Mobile Number"
            android:textColor="@color/login1"
            android:textFontWeight="500"
            android:textSize="@dimen/Text_Size_14" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editxt_bg"
            android:fontFamily="@font/redhat"
            android:hint="Enter Unpaid Amount"
            android:text="8982929182920"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:focusable="false"
            android:enabled="false"
            android:textFontWeight="400"
            android:textSize="@dimen/Text_Size_14" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/redhat_medium"
            android:text="Description"
            android:textColor="@color/login1"
            android:textFontWeight="500"
            android:textSize="@dimen/Text_Size_14" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editxt_bg"
            android:fontFamily="@font/redhat"
            android:hint="Enter Description"
            android:textAlignment="textStart"
            android:inputType="text"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:gravity="top|start"
            android:singleLine="true"
            android:textFontWeight="400"
            android:textSize="@dimen/Text_Size_14" />



        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/redhat_medium"
            android:stateListAnimator="@null"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="@dimen/Text_size_16"></androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

</LinearLayout>
