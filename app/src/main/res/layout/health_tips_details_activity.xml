                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/redhat_medium"
                        android:maxLines="1"
                        android:text="Long-lasting healthy changes: Doable and worth while."
                        android:textColor="@color/login1"
                        android:textFontWeight="500"
                        android:textSize="@dimen/Text_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/redhat"
                        android:text="By Dr. Navneet Srivastava  ●  28 Sep 2021"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/Text_Size_12" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginVertical="15dp"
                        android:background="@drawable/dot" />

                    <TextView
