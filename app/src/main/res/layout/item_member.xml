<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_member"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:src="@drawable/male_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_member"
            android:orientation="vertical">

            <TextView
                android:id="@+id/member_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/redhat_medium"
                android:text="Harikesh Kumar"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="@dimen/Text_size_16" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/member_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/redhat"
                    android:gravity="center_vertical"
                    android:text="Male"
                    android:textColor="@android:color/darker_gray"
                    android:textFontWeight="400"
                    android:textSize="@dimen/Text_Size_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/redhat"
                    android:gravity="center_vertical"
                    android:text="●"
                    android:textColor="@android:color/darker_gray"
                    android:textFontWeight="400"
                    android:textSize="6sp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/member_details2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/redhat"
                    android:gravity="center_vertical"
                    android:text="Male"
                    android:textColor="@android:color/darker_gray"
                    android:textFontWeight="400"
                    android:textSize="@dimen/Text_Size_14" />



            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/more_icon"
            android:layout_width="5dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/more_icon"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shadow" />


</LinearLayout>