<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="2dp"
    android:background="@drawable/layout_bg6"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/healthrecord_icon"
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:padding="2dp"
        android:scaleType="centerInside"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/healthrecord_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhat_medium"
            android:text="Custom Navigation Drawer Row"
            android:textColor="@color/txtcolor2"
            android:textFontWeight="500"
            android:textSize="14sp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/healthrecord_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhat_medium"
            android:gravity="center_vertical"
            android:text="Custom Navigation Drawer Row"
            android:textColor="@android:color/darker_gray"
            android:textFontWeight="400"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/healthrecord_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhat_medium"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@color/itemreportbg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="Custom Navigation Drawer Row"
            android:textColor="@android:color/white"
            android:textFontWeight="400"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


</LinearLayout>