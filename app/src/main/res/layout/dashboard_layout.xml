<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/linear_call"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Location"
                        android:fontFamily="@font/redhat"
                        android:textFontWeight="400"
                        android:textColor="@color/dashcolor1"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gomti Nagar, Lucknow"
                        android:textColor="@color/dashcolor1"
                        android:fontFamily="@font/redhat"
                        android:textFontWeight="400"
                        android:textSize="14sp" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="8dp"
                            android:src="@drawable/arrow"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="3dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/linear_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/circular_bg"
                    android:padding="10dp"
                    android:src="@drawable/call_icon1" />
            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    >

                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view_inner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        card_view:cardBackgroundColor="@color/dashcolor3"
                        card_view:cardCornerRadius="4dp"
                        card_view:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/linear_end"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/image_p"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/circular_bg1"
                                    android:padding="5dp"
                                    android:src="@drawable/p_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="Palpate Points"
                                    android:fontFamily="@font/redhat"
                                    android:textFontWeight="400"
                                    android:textColor="@color/dashcolor1"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linear_end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center_vertical"
                                    android:text="300"
                                    android:fontFamily="@font/redhat"
                                    android:textColor="@color/dashcolor1"
                                    android:textFontWeight="500"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/circular_bg2"
                                    android:padding="8dp"
                                    android:src="@drawable/left_arrow" />
                            </LinearLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Health stats"
                        android:textColor="@color/dashcolor1"
                        android:textFontWeight="500"
                        android:fontFamily="@font/redhat_medium"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/frame1"></ImageView>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="165dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/layout_bg"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/linear_blood"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="10dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/dashblood_bg"
                                    android:padding="10dp"
                                    android:src="@drawable/dashblood_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="Blood Pressure"
                                    android:textColor="@color/dashcolor1"

                                    android:textFontWeight="500"
                                    android:textSize="14sp" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/txt_bloodupdate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="Last Update: 08 Sep 2021"
                                android:textColor="@android:color/darker_gray"
                                android:textFontWeight="400"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="165dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/layout_bg"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/linear_temp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="10dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/dashtemp_bg"
                                    android:padding="10dp"
                                    android:src="@drawable/dashtemp_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="Temperature"
                                    android:textColor="@color/dashcolor1"
                                    android:textFontWeight="500"
                                    android:textSize="14sp" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/txt_tempupdate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="Last Update: 08 Sep 2021"
                                android:textColor="@android:color/darker_gray"
                                android:textFontWeight="400"
                                android:textSize="11sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/layout_bg"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dashcoupn_bg" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_coupuntitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Health Insurance"
                                android:fontFamily="@font/redhat_medium"
                                android:textColor="@color/dashcolor1"
                                android:textFontWeight="500"
                                android:textSize="14sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/layout_coupnbottom"
                                android:layout_below="@+id/txt_coupuntitle"
                                android:layout_marginTop="8dp"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                                android:textColor="@color/dashtxtcolor"
                                android:fontFamily="@font/redhat"
                                android:textFontWeight="400"
                                android:textSize="12sp" />

                            <RelativeLayout
                                android:id="@+id/layout_coupnbottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/layout_coupoun_bg"
                                    android:padding="5dp"
                                    android:text="Coupons | Insurance | Points"
                                    android:textColor="@color/dashcolor2"
                                    android:fontFamily="@font/redhat"
                                    android:textFontWeight="400"
                                    android:textSize="11sp" />

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/circular_bg3"
                                    android:padding="8dp"
                                    android:src="@drawable/left_arrow" />

                            </RelativeLayout>

                        </RelativeLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Our offerings"
                        android:textColor="@color/dashcolor1"
                        android:fontFamily="@font/redhat_medium"
                        android:textFontWeight="500"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="135dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/layout_bg1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/offercircle_bg"
                                android:padding="10dp"
                                android:src="@drawable/doctor_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Find Doctor Near You"
                                android:textColor="@color/dashcolor1"
                                android:fontFamily="@font/redhat_medium"
                                android:textFontWeight="500"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Confirmed Appointments"
                                android:textColor="@color/dashtxtcolor"
                                android:textFontWeight="400"
                                android:fontFamily="@font/redhat"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="135dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/layout_bg2"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/offercircle_bg"
                                android:padding="10dp"
                                android:src="@drawable/assistant_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Health Assistance"
                                android:textColor="@color/dashcolor1"
                                android:textFontWeight="500"
                                android:fontFamily="@font/redhat_medium"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Connect with 60 Secs"
                                android:textColor="@color/dashtxtcolor"
                                android:textFontWeight="400"
                                android:fontFamily="@font/redhat"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/layout_bg3"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/offercircle_bg"
                                android:padding="10dp"
                                android:src="@drawable/medicine_icon" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Medicines"
                                    android:textColor="@color/dashcolor1"
                                    android:fontFamily="@font/redhat_medium"
                                    android:textFontWeight="500"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Essentials at your doorstaps"
                                    android:textColor="@color/dashtxtcolor"
                                    android:textFontWeight="400"
                                    android:fontFamily="@font/redhat"
                                    android:textSize="11sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/layout_bg4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/offercircle_bg"
                                android:padding="10dp"
                                android:src="@drawable/lab_icon" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lab Test"
                                    android:textColor="@color/dashcolor1"
                                    android:fontFamily="@font/redhat_medium"
                                    android:textFontWeight="500"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Sample pickup at your home"
                                    android:textColor="@color/dashtxtcolor"
                                    android:fontFamily="@font/redhat"
                                    android:textFontWeight="400"
                                    android:textSize="11sp" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="283dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/dashcolor2"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In the spotlight"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:fontFamily="@font/redhat_medium"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Explore deals, offers, health update and more"
                        android:textColor="@color/white"
                        android:textFontWeight="400"
                        android:fontFamily="@font/redhat"
                        android:textSize="12sp" />



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="168dp"
                        android:background="@drawable/frame3"
                        android:layout_margin="20dp"></ImageView>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:background="@drawable/dot_enable"/>
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:background="@drawable/dot_disable"/>
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:background="@drawable/dot_disable"/>
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:background="@drawable/dot_disable"/>
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:background="@drawable/dot_disable"/>
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:background="@drawable/dot_disable"/>
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:background="@drawable/dot_disable"/>




                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/layout_bg"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_bottom"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dashbottom_img" />

                        <LinearLayout
                            android:layout_toRightOf="@+id/img_bottom"
                            android:layout_toLeftOf="@id/img_left"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24x7 Emergency services"
                                android:textColor="@color/dashcolor1"
                                android:textFontWeight="500"
                                android:fontFamily="@font/redhat_medium"
                                android:textSize="14sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nearby hospital, doctors, ambulance etc."
                                android:textColor="@color/dashtxtcolor"
                                android:textFontWeight="400"
                                android:fontFamily="@font/redhat"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <ImageView

                            android:id="@+id/img_left"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="20dp"
                            android:background="@drawable/circular_bg4"
                            android:padding="10dp"
                            android:src="@drawable/right_arrow" />

                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>